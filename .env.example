# n8n Data Intelligence Orchestrator Environment Configuration
# Copy this file to .env and customize the values

# PostgreSQL Database Configuration
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_NON_ROOT_USER=n8n
POSTGRES_NON_ROOT_PASSWORD=your_secure_postgres_password_here

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# n8n Configuration
N8N_HOST=localhost
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/
N8N_EDITOR_BASE_URL=http://localhost:5678/

# n8n Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_n8n_password_here

# n8n Encryption (IMPORTANT: Generate a strong 32+ character key)
N8N_ENCRYPTION_KEY=your_strong_32_character_encryption_key_here_12345

# n8n Logging
N8N_LOG_LEVEL=info

# Email Configuration for Alerts (Optional)
N8N_EMAIL_MODE=smtp
N8N_SMTP_HOST=smtp.gmail.com
N8N_SMTP_PORT=587
N8N_SMTP_USER=your_email@gmail.com
N8N_SMTP_PASS=your_app_password
N8N_SMTP_SENDER=your_email@gmail.com

# Grafana Configuration
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=your_secure_grafana_password_here
GF_SERVER_ROOT_URL=http://localhost:3000
GF_INSTALL_PLUGINS=grafana-clock-panel,grafana-simple-json-datasource,grafana-worldmap-panel,grafana-piechart-panel
GF_AUTH_ANONYMOUS_ENABLED=false
GF_LOG_LEVEL=info
GF_FEATURE_TOGGLES=

# System Configuration
TIMEZONE=UTC

# Production Settings (uncomment for production)
# N8N_PROTOCOL=https
# N8N_HOST=your-domain.com
# WEBHOOK_URL=https://your-domain.com/
# N8N_EDITOR_BASE_URL=https://your-domain.com/
# GF_SERVER_ROOT_URL=https://your-domain.com:3000